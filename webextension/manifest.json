{
  "name": "Notifier for Feedlyâ„¢",
  "short_name": "ifnplus",
  "description": "is a smart badged powered toolbar notifier for feedly.com",
  "author": "Jeremy Schomery",
  "version": "0.1.5",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "*://feedly.com/*"
  ],
  "browser_action": {
    "default_icon": "data/icons/disabled/24.png"
  },
  "background": {
    "scripts": [
      "lib/config.js",
      "lib/chrome/chrome.js",
      "lib/common.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://feedly.com/*"],
    "js": ["data/inject.js"],
    "run_at": "document_start",
    "all_frames": false
  }],
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "homepage_url": "http://mybrowseraddon.com/feedly.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  }
}
